<div data-controller="message">
  <h2 style="margin-top: 0.5em;"><%= board.name %></h2>
  <h3>Users</h3>
  <% if members.any? %>
    <ul>
      <% members.each do |member| %>
        <li>
          <%= member.name %>
        </li>
      <% end %>
    </ul>
  <% else %>  
    <p> No users in this board. </p>
  <% end %>

  <h3>Activities</h3>
  
  <% activities.each.with_index do |activity, index| %>
    <%= render partial: "home/activity", locals: { activity: activity, index: index } %>
  <% end %>
</div>
