<h4 data-controller="message">(<%= index + 1 %>) <%= activity.description %></h4>
<% if activity.contributions.any? %>
  <ul>
    <% activity.contributions.each do |contribution| %>
      <li>
        <p>[<%= contribution.code %>]</p>
        <p><%= contribution.user.name %></p>
        <p><%= contribution.content %></p>
        <% if contribution.reactions.any? %>
          <h5>Reactions</h5>
          <ul>
            <% contribution.reactions.each do |reaction| %>
              <li>
                <p>[<%= reaction.id %>]</p>
                <p><%= reaction.user.name %></p>
                <p><%= reaction.text %></p>
                
              </li>
            <% end %>
          </ul>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p> No contributions yet. </p>
<% end %>
